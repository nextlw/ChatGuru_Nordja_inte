# Dockerfile para ambiente de TESTE
# Build mais rápido, imagem menor, otimizado para desenvolvimento/teste

# Stage 1: Build
FROM rust:1.82-slim as builder

# Instalar dependências do sistema
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copiar arquivos de dependências primeiro (cache Docker)
COPY Cargo.toml Cargo.lock ./

# Build de dependências apenas (cache optimization)
RUN mkdir src && \
    echo "fn main() {}" > src/main.rs && \
    cargo build --release && \
    rm -rf src

# Copiar código fonte
COPY src ./src
COPY config ./config

# Build final (usa cache das dependências)
RUN cargo build --release

# Stage 2: Runtime (imagem mínima)
FROM debian:bookworm-slim

# Instalar apenas o necessário para runtime
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Criar usuário não-root
RUN useradd -m -u 1001 appuser

WORKDIR /app

# Copiar binário e configurações
COPY --from=builder /app/target/release/chatguru-clickup-middleware /app/
COPY --from=builder /app/config /app/config

# Permissões
RUN chown -R appuser:appuser /app

# Usar usuário não-root
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Expor porta
EXPOSE 8080

# Variáveis de ambiente padrão para teste
ENV RUST_LOG=debug \
    RUST_ENV=test \
    PORT=8080 \
    IS_TEST_ENVIRONMENT=true

# Comando de execução
CMD ["./chatguru-clickup-middleware"]